{
  "compilerOptions": {
    "target": "es2017",                // Upgrade to ES2017 for better async/await support
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true           // Add this if you want to import .json files
  }
}
